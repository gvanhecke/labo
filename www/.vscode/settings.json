{
    "liveServer.settings.port": 5555,
    "liveServer.settings.CustomBrowser": "chrome",
    "liveServer.settings.AdvanceCustomBrowserCmdLine": "chrome --incognito --remote-debugging-port=9222",
    "liveServer.settings.ChromeDebuggingAttachment": true,
    "liveServer.settings.ignoreFiles": [
        ".vscode/**",
        "**/*.scss",
        "**/*.sass",
        "**/*.ts"
    ],

    "deploy.reloaded": {
        "packages": [
            {
                "name": "Website",
                "files": [
                    "/**/*.html",
                    "/**/*.css",
                    "/**/*.js"
                ]
            }

        ],

        "targets": [
            {
                "type": "sftp",
                "name": "It-Sirius SFTP",
                "description": "Deploy to It-sirius.be",

                "dir": "/web/geofrey",
                "host": "it-sirius.be", "port": 22,
                "askForUser": true,
                "askForPassword": true
            }
        ],

        "buttons": [
            {
                "text": "Deploy(SFTP)!",
                "command": "extension.deploy.reloaded.deployPackageFiles",
                "arguments": ["Website", "It-Sirius SFTP"]
            }
        ]      
    }


}